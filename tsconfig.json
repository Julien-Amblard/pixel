{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"baseUrl": "./src",
		"strict": false,
		"outDir": "./lib",
		"declaration": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
